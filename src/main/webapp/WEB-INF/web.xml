<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <display-name>/proyectoSalon</display-name>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>EliminarUsuarioServlet</servlet-name>
        <servlet-class>com.salon.controller.EliminarUsuarioServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>EditarUsuarioServlet</servlet-name>
        <servlet-class>com.salon.controller.EditarUsuarioServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>CrearUsuarioServlet</servlet-name>
        <servlet-class>com.salon.controller.CrearUsuarioServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>ListarUsuarioServlet</servlet-name>
        <servlet-class>com.salon.controller.ListarUsuarioServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>LoginUsuarioServlet</servlet-name>
        <servlet-class>com.salon.controller.LoginUsuarioServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>LoginUsuarioServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    
    <servlet-mapping>
        <servlet-name>EliminarUsuarioServlet</servlet-name>
        <url-pattern>/EliminarUsuario</url-pattern>
    </servlet-mapping>
    
    
    <servlet-mapping>
        <servlet-name>EditarUsuarioServlet</servlet-name>
        <url-pattern>/EditarUsuario</url-pattern>
    </servlet-mapping>
    
    
    <servlet-mapping>
        <servlet-name>CrearUsuarioServlet</servlet-name>
        <url-pattern>/CrearUsuario</url-pattern>
    </servlet-mapping>
    
    
    <servlet-mapping>
        <servlet-name>ListarUsuarioServlet</servlet-name>
        <url-pattern>/ListarUsuario</url-pattern>
    </servlet-mapping>
  
    <!-- <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>-->

</web-app>
